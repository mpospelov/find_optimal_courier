a.btn.btn-default ui-sref="home" role="button" Back

form
  h2 Please login
  trips-input(
    name="email"
    label="Email address"
    placeholder="Email address"
    type="email"
    model="login_ctrl.form.email"
    error="login_ctrl.errors.email")
  trips-input(
    name="password"
    label="Password"
    placeholder="Password"
    type="password"
    model="login_ctrl.form.password"
    error="login_ctrl.errors.password")
  button.btn.btn-lg.btn-primary.btn-block(
    ng-click="login_ctrl.submit()"
    type="submit") Login
