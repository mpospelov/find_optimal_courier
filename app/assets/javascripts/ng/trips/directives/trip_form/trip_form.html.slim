form name="tripForm" ng-submit="submit()"
  trips-input(
    name="destination"
    label="Destination"
    placeholder="Destination"
    type="text"
    model="trip.destination"
    error="tripErrors.destination")
  trips-input(
    name="start_date"
    label="Start date"
    placeholder="Start date"
    type="date"
    model="trip.start_date"
    error="tripErrors.start_date")
  trips-input(
    name="start_time"
    label="Start time"
    placeholder="Start time"
    type="time"
    model="trip.start_time"
    error="tripErrors.start_time")
  trips-input(
    name="end_date"
    label="End date"
    placeholder="End date"
    type="date"
    model="trip.end_date"
    error="tripErrors.end_date")
  trips-input(
    name="end_time"
    label="End time"
    placeholder="End time"
    type="time"
    model="trip.end_time"
    error="tripErrors.end_time")
  trips-input(
    name="comment"
    label="Comment"
    placeholder="Comment"
    type="text"
    model="trip.comment"
    error="tripErrors.comment")
  #trip_map style="height: 400px; width: 900px;"
  br
  br

  button.btn.btn-lg.btn-primary.btn-block(type="submit") Save
