form.form-signin
  h2.form-signin-heading Please login
  label.sr-only for="email" Email address
  input.form-control(
    autofocus=""
    name="email"
    placeholder="Email address"
    required=""
    type="email"
    ng-model="login_ctrl.form.email")
  label.sr-only for="inputPassword" Password
  input.form-control(
    name="password"
    placeholder="Password"
    required=""
    type="password"
    ng-model="login_ctrl.form.password")
  button.btn.btn-lg.btn-primary.btn-block(
    ng-click="login_ctrl.submit()"
    type="submit") Login
